<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="#121212">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gostou do App?"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Este aplicativo é gratuito e sem anúncios. Se ele te ajudou, considere apoiar o desenvolvimento com um café!"
        android:textAlignment="center"
        android:textColor="#CCCCCC"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buyCoffeeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Buy me a coffee ☕" />

</LinearLayout>